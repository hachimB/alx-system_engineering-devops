#!/usr/bin/env bash
# Configuration of a Header response.
sh -c "echo '
    server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    location / {
    add_header X-Served-By $HOSTNAME;
    }
}' | sudo tee /etc/nginx/sites-available/default"
sudo nginx -t
sudo service nginx restart
