#!/usr/bin/env bash
# This script allow us to nstall nginx web server
#apt-get -y install nginx
#echo 'Hello World!' | tee /var/www/html/index.html
#service nginx restart
sudo apt-get -y update
sudo apt-get -y install nginx

# Configure Nginx
echo 'Hello World!' | sudo tee /var/www/html/index.html
sudo sed -i 's|^\s*listen\s*80\s*;$|listen 80 default_server;|' /etc/nginx/sites-available/default
sudo sed -i '/^\s*location\s*\/\s*{$/a \\treturn 200 "Hello World!";' /etc/nginx/sites-available/default

# Restart Nginx
sudo kill -HUP $(cat /var/run/nginx.pid)
